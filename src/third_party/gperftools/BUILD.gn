config("flags") {
  cflags = [
    "-fno-builtin-calloc",
    "-fno-builtin-cfree",
    "-fno-builtin-free",
    "-fno-builtin-malloc",
    "-fno-builtin-memalign",
    "-fno-builtin-realloc",
    "-fno-builtin-posix_memalign",
    "-fno-builtin-pvalloc",
    "-fno-builtin-valloc",
  ]

  # TODO: fix this issue with clang-3.7 in upstream.
  cflags += [ "-Wno-shift-negative-value" ]

  defines = [ "HAVE_CONFIG_H" ]
  if (host_os == "linux") {
    defines += [ "NO_FRAME_POINTER" ]

    # ASan contains it's own LeakSanitizer.
    if (use_asan) {
      defines += [ "NO_HEAP_CHECK" ]
    }
  }
  if (host_os == "mac") {
    defines += [
      "NO_HEAP_CHECK",
      "NO_TCMALLOC_SAMPLES",
      "_THREAD_SAFE",
    ]
  }

  include_dirs = [ host_os ]

  ldflags = [
    "-fno-builtin-calloc",
    "-fno-builtin-cfree",
    "-fno-builtin-free",
    "-fno-builtin-malloc",
    "-fno-builtin-memalign",
    "-fno-builtin-realloc",
    "-fno-builtin-posix_memalign",
    "-fno-builtin-pvalloc",
    "-fno-builtin-valloc",
  ]
}

config("no_warnings") {
  cflags = [
    "-Wno-deprecated-declarations",
    "-Wno-sign-compare",
    "-Wno-unused-const-variable",
    "-Wno-unused-function",
    "-Wno-unused-private-field",
    "-Wno-unused-variable",
  ]
}

