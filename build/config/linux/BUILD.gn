config("base") {
  defines = [ "OS_LINUX" ]

  ldflags = [
    "-fuse-ld=lld",
    "-rdynamic",  # for |backtrace()|
    "-rpath",
    "\$ORIGIN",
  ]

  # Can't use this flag with ASan: http://llvm.org/bugs/show_bug.cgi?id=21341
  if (!use_asan && !use_tsan) {
    # FIXME: don't use this flag because of silly Protobuf extensions.
    # ldflags += [ "--no-undefined" ]
  }
}
